<h1> Listing All Stories </h1>


<p>
<%= link_to "Create new Story", new_story_path %>
</p>

<table>
<tr>
<th>Story Name</th>
<th>Content</th>
</tr>


<% @storie.each do |storie| %>
<tr>
<td><%= storie.name %></td>
<td><%= storie.content %></td>
<td><%= link_to 'Edit', edit_story_path(storie) %></td>
<td><%= link_to 'View', story_path(storie) %></td>
<td><%= link_to 'Delete', story_path(storie), method: :delete, data: {confirm: "Are you sure?"} %></td>


</tr>
<% end %>
</table>
