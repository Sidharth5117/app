<h1>Login</h1>
<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path, local: true) do |form| %>
 
<div class = "form-group">
<div class = "control-label col-sm-2">

    <%= form.label :email %>
</div>
<div class="col-sm-8">  
    <%= form.email_field :email, class: "form-control", autocomplete: "off",placeholder: "Enter Email" %>
  </div>
</div>

<div class = "form-group">
<div class = "control-label col-sm-2">

    <%= form.label :password %>
</div>
<div class="col-sm-8">  
    <%= form.password_field :password, class: "form-control",autocomplete: "off", placeholder: "Enter Password" %>
  </div>
</div>


 <div class = "form-group">
<div class="col-sm-offset-2 col-sm-10">  
  <%= form.submit "Login", class: 'btn-primary btn-lg' %>
  </div>
</div>



<div class="col-xs-4 col-xs-offset-4">
[ <%= link_to "Cancel request and return to stories listing", stories_path %> ]
</div>
<% end %>
