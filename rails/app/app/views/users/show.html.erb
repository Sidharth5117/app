<h1>Welcome to <%= @user.username %>'s page</h1>
<div class="row">
<div class="col-md-4 col-md-offset-4">
<%= gravatar_for @user, size: 150 %>
</div>
</div>
<br>
 <%= link_to "Stories Listing", stories_path, class: "btn btn-xs btn-primary" %> | 
<% if logged_in? && current_user == @user %>
 <%= link_to "Logout", logout_path, class: "btn btn-xs btn-danger",  method: :delete %> 
<% end %>
<h4><%= @user.username %>'s stories</h4>
<%= render 'stories/storie', obj: @user.storie %>

