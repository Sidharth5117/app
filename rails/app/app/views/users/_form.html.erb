<%= form_with(model: @user,html: {class: "form-horizontal", role: "form"}, local: true) do |form| %>
   <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this storie from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class='row'>
<div class='col-sm-12'>

<div class = "form-group">
<div class = "control-label col-sm-2">
<%= form.label :username %>
</div>
<div class="col-sm-8">
<%= form.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus:true %>
</div>
</div>
  
<div class = "form-group">
<div class = "control-label col-sm-2">

    <%= form.label :email %>
</div>
<div class="col-sm-8">  
    <%= form.email_field :email, class: "form-control", placeholder: "Enter Email" %>
  </div>
</div>

<div class = "form-group">
<div class = "control-label col-sm-2">

    <%= form.label :password %>
</div>
<div class="col-sm-8">  
    <%= form.password_field :password, class: "form-control", placeholder: "Enter Password" %>
  </div>
</div>


 <div class = "form-group">
<div class="col-sm-offset-2 col-sm-10">  
  <%= form.submit(@user.new_record? ? "Sign up" : "Update Account", class: 'btn-primary btn-lg') %>
  </div>
</div>
<% end %>


<div class="col-xs-4 col-xs-offset-4">
