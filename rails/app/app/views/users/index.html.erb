<h3>All SidStories Writers</h3>
<% @user.each do |user| %>

<div class="row">
<div class="col-sm-12 col-xs-offset-2">
<div class="card bg-light mb-3 border-dark mb-3">
<div class="card-header">
<h5>
<%= gravatar_for(user) %>
<%= link_to user.username,user_path(user) %></h5>
</div>
<div class="storie.body">
<h6><%= pluralize(user.storie.count, "story") if user.storie %></h6>
<br>
<% if logged_in? and current_user.admin? %>
<%= link_to "Delete this User", user_path(user), method: :delete, 
data: { confirm: "Are you sure you want to delete this user & all their stories?"}, 
class: "btn btn-xs btn-danger" %>
<% end %>
</div>
</div>
</div>
</div>
<br>
<% end %>
<div class="d-flex justify-content-center">
<%= will_paginate(@user, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
</div>
